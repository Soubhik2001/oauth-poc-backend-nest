generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  users           User[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  tasksRequesting Task[]   @relation("RequestedRole")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  country       String?
  role          Role     @relation(fields: [roleId], references: [id])
  roleId        Int
  
  // Relation 1: Tasks owned by this user
  tasks         Task[]   @relation("UserTasks")

  // Relation 2: Tasks actioned/approved by this user (admin)
  actionedTasks Task[]   @relation("TaskActioner")

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // REMOVED DUPLICATE 'tasks' HERE
}

model Task {
  id              Int        @id @default(autoincrement())
  type            String
  status          String     @default("pending")
  state           String     @default("open")
  priority        String?
  
  requestedRole   Role?      @relation("RequestedRole", fields: [requestedRoleId], references: [id])
  requestedRoleId Int?

  // Relation 1: Owner of the task (matches "UserTasks" in User)
  user            User       @relation("UserTasks", fields: [userId], references: [id])
  userId          Int

  // Relation 2: Admin who actioned the task (matches "TaskActioner" in User)
  actionBy        User?      @relation("TaskActioner", fields: [actionById], references: [id])
  actionById      Int?
  actionAt        DateTime?

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  documents       Document[]
  comment         String?
}

model Document {
  id        Int      @id @default(autoincrement())
  filename  String
  path      String
  mimetype  String
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    Int
  createdAt DateTime @default(now())
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}