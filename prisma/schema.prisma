generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  users           User[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  tasksRequesting Task[]   @relation("RequestedRole")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  country   String?
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    Int
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id              Int        @id @default(autoincrement())
  type            String
  status          String     @default("pending")
  requestedRole   Role?      @relation("RequestedRole", fields: [requestedRoleId], references: [id])
  requestedRoleId Int?
  user            User       @relation(fields: [userId], references: [id])
  userId          Int
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  documents       Document[]
  comment         String?
}

model Document {
  id       Int    @id @default(autoincrement())
  filename String
  path     String
  mimetype String
  task   Task @relation(fields: [taskId], references: [id])
  taskId Int
  createdAt DateTime @default(now())
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}